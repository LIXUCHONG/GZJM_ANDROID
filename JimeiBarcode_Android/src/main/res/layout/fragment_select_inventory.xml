        </LinearLayout>

    </LinearLayout>

    <ListView
        android:id="@+id/select_stock_group_lv"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#ffffff"
        android:visibility="gone" />

</FrameLayout>